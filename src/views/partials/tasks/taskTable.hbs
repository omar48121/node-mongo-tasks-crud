{{#if tasks}}
  <table class="table table-bordered table-hover table-dark">
  <thead>
    <tr>
      <th>N.</th>
      <th>Title</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <ul>
      {{#each tasks}}
      <tr>
        <td>{{@index}}</td>
        <td>{{title}}</td>
        <td>{{description}}</td>
        <td>

          {{#if done}}
          <a href="/tasks/{{_id}}/toggleDone" class="btn btn-dark">Undone</a>
          {{else}}
          <a href="/tasks/{{_id}}/toggleDone" class="btn btn-success">Done</a>
          {{/if}}

          <a href="/tasks/{{_id}}/edit" class="btn btn-warning">Update</a>
          <a href="/tasks/{{_id}}/delete" class="btn btn-danger">Delete</a </td>
      </tr>
      {{/each}}
    </ul>
  </tbody>
</table>

{{else}}
      <div class="h-100 d-flex align-items-center justify-content-center">
        <div class="text-center text-white">
        <h2>No tasks</h2>
        <img src="/icons/docs.png" alt="" class="w-75">
      </div>
      </div>
{{/if}}